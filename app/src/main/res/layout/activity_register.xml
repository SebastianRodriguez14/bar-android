<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    tools:context=".RegisterActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="35dp"
        android:layout_marginEnd="35dp"
        android:orientation="vertical"
        tools:ignore="MissingConstraints">
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="55dp"
            app:cardCornerRadius="34dp"
            android:layout_marginEnd="75dp"
            android:layout_marginStart="75dp"
            android:layout_marginTop="128dp"
            android:layout_marginBottom="-200dp"
            app:cardElevation="10dp"
            android:theme="@style/Forms"
            android:backgroundTint="?attr/colorOnSecondary"
            >
        </androidx.cardview.widget.CardView>
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="500dp"
            app:cardCornerRadius="50dp"
            app:cardBackgroundColor="#0000"
            android:layout_marginTop="175dp"
            android:layout_marginBottom="20dp"
            android:layout_marginEnd="10dp"
            android:layout_marginStart="10dp"
            app:cardElevation="10dp"
            >
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:theme="@style/Forms"
                android:background="?attr/colorSecondaryVariant"
                />
        </androidx.cardview.widget.CardView>
    </LinearLayout>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="10dp"
        android:text="Bar La China"
        android:fontFamily="@font/font_1"
        android:textColor="@color/white"
        android:textAlignment="center"
        android:textSize="24sp" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="140dp"
        android:text="Registrate"
        android:fontFamily="@font/font_2"
        android:theme="@style/Forms"
        android:textColor="?attr/colorOnPrimary"
        android:textAlignment="center"
        android:textSize="28sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginStart="55dp"
        android:layout_marginEnd="55dp"
        tools:ignore="MissingConstraints">
        <TextView
            android:id="@+id/textField_Correo_R"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="Correo"
            android:fontFamily="@font/font_2"
            android:theme="@style/Forms"
            android:textColor="?attr/colorOnPrimary"
            android:textSize="22dp"
            android:textAlignment="center"
            android:layout_marginTop="250dp"
            />
        <EditText
            android:id="@+id/editText_Correo_R"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:hint="Correo Electronico"
            android:textColor="@color/black"
            android:fontFamily="@font/font_2"
            android:maxLength="45"
            android:paddingStart="10dp"
            android:paddingEnd="10dp"
            android:background="@drawable/my_border"
            android:layout_marginTop="5dp"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="Ejemplo de correo: example@gmail.com"
            android:fontFamily="@font/font_2"
            android:textColor="@color/gray"
            android:layout_marginTop="5sp"
            android:textSize="12dp"

            />
        <TextView
            android:id="@+id/textField_Clave_R"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="Contraseña"
            android:fontFamily="@font/font_2"
            android:theme="@style/Forms"
            android:textColor="?attr/colorOnPrimary"
            android:textSize="22dp"
            android:textAlignment="center"
            android:layout_marginTop="40dp"
            />

        <EditText
            android:id="@+id/editText_Clave_R"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_marginTop="5dp"
            android:fontFamily="@font/font_2"
            android:hint="Contraseña"
            android:textColor="@color/black"
            android:paddingStart="10dp"
            android:paddingEnd="10dp"
            android:maxLength="16"
            android:inputType="textPassword"
            android:background="@drawable/my_border"
            android:layout_marginBottom="-20dp"
            />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginStart="50dp"
            android:layout_marginEnd="50dp"
            android:layout_marginTop="75dp">

            <Button
                android:id="@+id/btnMenu_R"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:backgroundTint="@color/green_2"
                android:text="Registrate"
                android:textColor="@color/white"
                android:fontFamily="@font/font_2"
                android:textSize="20dp"
                />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginStart="35dp"
            android:layout_marginEnd="35dp">
            <TextView
                android:id="@+id/text_login"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="¿Ya tienes una Cuenta? Inicia Sesión aqui"
                android:textAlignment="center"
                android:fontFamily="@font/font_2"
                android:textColor="@color/green_2"/>
        </LinearLayout>


    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>